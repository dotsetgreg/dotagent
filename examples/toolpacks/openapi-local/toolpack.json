{
  "id": "openapi-local",
  "name": "OpenAPI Local Example",
  "version": "1.0.0",
  "description": "Example OpenAPI toolpack that reads a local spec file",
  "enabled": false,
  "connectors": [
    {
      "id": "todo_api",
      "type": "openapi",
      "openapi": {
        "spec_path": "spec/todo.json",
        "base_url": "http://localhost:8080",
        "allow_private_hosts": true,
        "timeout_seconds": 30
      }
    }
  ],
  "tools": [
    {
      "name": "api_get_todo",
      "type": "openapi",
      "description": "Fetch a todo by id",
      "connector_id": "todo_api",
      "operation_id": "getTodoById"
    },
    {
      "name": "api_create_todo",
      "type": "openapi",
      "description": "Create a todo item",
      "connector_id": "todo_api",
      "operation_id": "createTodo"
    }
  ]
}
